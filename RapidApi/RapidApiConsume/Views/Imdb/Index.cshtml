@model List<ApiMovieViewModel>
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container">
    <br /><br />
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Film Adı</th>
            <th>Imdb Puanı</th>
            <th>Görsel</th>
        </tr>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.rank</td>
                <td>@item.title <br />
                    @item.description</td>
                <td>@item.rating</td>
                <td><img src="@item.image" alt="Alternate Text" /></td>
            </tr>
        }
    </table>
</div>